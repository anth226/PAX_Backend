{{> header }}
    <h4 class="bodyheader">
        {{#equals lang "en"}}
            Designation List
        {{else}}
            উপাধি তালিকা 
        {{/equals}}
    </h4>
    <table>
        <thead>
            <tr>
            {{#each headerColumns as | header |}}
                <th class="tableHeader">{{ header }}</th>
            {{/each}}
            </tr>
        </thead>
        <tbody>
            {{#each data as | item |}}
                <tr>
                    <td>{{inc @index}}</td>
                    <td>{{ item.name_en }}</td>
                    <td>{{ item.name_bn }}</td>
                    <td>{{number item.priority }}</td>
                    <td>{{status item.status}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{> footer }}
