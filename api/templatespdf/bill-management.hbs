{{> header }}
    <h4 class="bodyheader">
        {{#equals lang "en"}}
             Bill Management List
        {{else}}
            বিল ব্যবস্থাপনা তালিকা
        {{/equals}}
    </h4>
    <table>
        <thead>
            <tr>
            {{#each headerColumns as | header |}}
                <th class="tableHeader">{{ header }}</th>
            {{/each}}
            </tr>
        </thead>
        <tbody>
            {{#each data as | item |}}
                <tr>
                    <td>{{inc @index}}</td>
                    <td>{{ item.voucherId }}</td>
                    <td>{{number item.allocated_amount }}</td>
                    <td>{{number item.expense_amount }}</td>
                    <td>{{number item.remaining_amount }}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
 {{> footer }}